{
  "version": 2,
  "builds": [
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
        "src": "*.json",
        "use": "@vercel/static"
      },
    {
      "src": "assets/**/*.{js,css,png,jpg,jpeg,svg}",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "watchers": {
    "usePolling": true,
    "interval": 1000
  },
  "ignorePatterns": [
    "^/Game/.*",
    "Game/**",
    "node_modules/**"
  ]
} 